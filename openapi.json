{
  "openapi": "3.0.3",
  "info": {
    "title": "Edilcos Automation Backend",
    "version": "1.0.0",
    "description": "OpenAPI specification for health and basic admin endpoints.\n\nNote: OneDrive/SharePoint integration uses server-side OAuth2 app-only (client credentials). The server manages tokens and no client Authorization header is required.",
  },
  "servers": [
    { "url": "http://localhost:9100", "description": "Local development" },
    { "url": "http://localhost:8000", "description": "Alt local port" }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Shallow health",
        "operationId": "getHealth",
        "responses": {
          "200": {
            "description": "Healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "healthy" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/health/deep": {
      "get": {
        "summary": "Deep readiness",
        "operationId": "getHealthDeep",
        "responses": {
          "200": {
            "description": "Ready",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "ready" }
                  }
                }
              }
            }
          },
          "503": {
            "description": "Not ready"
          }
        }
      }
    }
    ,
    "/admin/integrations/onedrive/logs": {
      "get": {
        "summary": "List OneDrive integration events",
        "operationId": "listOneDriveIntegrationEvents",
        "parameters": [
          {"name": "level", "in": "query", "schema": {"type": "string"}, "description": "Filter by level (INFO|WARN|ERROR)"},
          {"name": "event_type", "in": "query", "schema": {"type": "string"}, "description": "Filter by event_type"},
          {"name": "since", "in": "query", "schema": {"type": "string", "format": "date-time"}, "description": "ISO timestamp to filter from (inclusive)"},
          {"name": "limit", "in": "query", "schema": {"type": "integer"}},
          {"name": "offset", "in": "query", "schema": {"type": "integer"}}
        ],
        "responses": {
          "200": {
            "description": "List of integration events",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {"type": "string"},
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {"type": "string"},
                          "created_at": {"type": "string", "format": "date-time"},
                          "level": {"type": "string"},
                          "event_type": {"type": "string"},
                          "message": {"type": "string"},
                          "context": {"type": "object"}
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
    ,
    "/admin/monitoring/raw_events": {
      "get": {
        "summary": "List Raw Events",
        "operationId": "listRawEvents",
        "parameters": [
          {"name": "tenant_id", "in": "query", "schema": {"type": "string"}},
          {"name": "start_date", "in": "query", "schema": {"type": "string", "format": "date-time"}, "description": "ISO start date/time filter (inclusive)"},
          {"name": "end_date", "in": "query", "schema": {"type": "string", "format": "date-time"}, "description": "ISO end date/time filter (inclusive)"},
          {"name": "event_type", "in": "query", "schema": {"type": "string"}, "description": "Filter by event_type present in payload"},
          {"name": "limit", "in": "query", "schema": {"type": "integer"}},
          {"name": "offset", "in": "query", "schema": {"type": "integer"}}
        ],
        "responses": {"200": {"description": "List of RawEvents"}}
      }
    },
    "/admin/monitoring/normalized_events": {
      "get": {
        "summary": "List Normalized Events",
        "operationId": "listNormalizedEvents",
        "parameters": [
          {"name": "tenant_id", "in": "query", "schema": {"type": "string"}},
          {"name": "event_type", "in": "query", "schema": {"type": "string"}, "description": "Filter by event_type stored in normalized event"},
          {"name": "start_date", "in": "query", "schema": {"type": "string", "format": "date-time"}, "description": "ISO start date/time filter (inclusive)"},
          {"name": "end_date", "in": "query", "schema": {"type": "string", "format": "date-time"}, "description": "ISO end date/time filter (inclusive)"},
          {"name": "limit", "in": "query", "schema": {"type": "integer"}},
          {"name": "offset", "in": "query", "schema": {"type": "integer"}}
        ],
        "responses": {"200": {"description": "List of NormalizedEvents"}}
      }
    },
    "/admin/monitoring/discarded_audits": {
      "get": {
        "summary": "List Discarded Audit Events",
        "operationId": "listDiscardedAudits",
        "parameters": [
          {"name": "tenant_id", "in": "query", "schema": {"type": "string"}},
          {"name": "limit", "in": "query", "schema": {"type": "integer"}},
          {"name": "offset", "in": "query", "schema": {"type": "integer"}}
        ],
        "responses": {"200": {"description": "List of discarded audit events"}}
      }
    }
    ,
    "/admin/monitoring/gmail_events": {
      "get": {
        "summary": "List Gmail events",
        "operationId": "listGmailEvents",
        "parameters": [
          {"name": "processed", "in": "query", "schema": {"type": "boolean"}, "description": "Filter by processed status"},
          {"name": "event_type", "in": "query", "schema": {"type": "string"}},
          {"name": "start_date", "in": "query", "schema": {"type": "string", "format": "date-time"}},
          {"name": "end_date", "in": "query", "schema": {"type": "string", "format": "date-time"}},
          {"name": "limit", "in": "query", "schema": {"type": "integer"}},
          {"name": "offset", "in": "query", "schema": {"type": "integer"}}
        ],
        "responses": {"200": {"description": "List of Gmail raw events"}}
      }
    }
  }
}
